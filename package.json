{
  "name": "@adonisjs/sink",
  "version": "2.3.0",
  "description": "Utilities to create AdonisJs boilerplates and custom providers",
  "main": "index.js",
  "files": [
    "src",
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "keywords": [
    "adonisjs",
    "mrm",
    "scaffold",
    "utils"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/application": "^1.2.1",
    "@adonisjs/dev-utils": "^1.4.0",
    "@adonisjs/fold": "^6.2.3",
    "@adonisjs/mrm-preset": "^2.1.0",
    "@types/fs-extra": "^8.0.1",
    "@types/ini": "^1.3.30",
    "@types/marked": "^0.7.1",
    "@types/node": "^12.12.7",
    "@types/yaml": "^1.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "husky": "^3.0.9",
    "ini": "^1.3.5",
    "japa": "^3.0.1",
    "mrm": "^1.2.2",
    "np": "^5.1.3",
    "ts-node": "^8.5.0",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.2",
    "yaml": "^1.7.2"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@poppinss/colors": "^1.0.1",
    "@poppinss/fancy-logs": "^1.3.0",
    "@poppinss/prompts": "^1.0.4",
    "@poppinss/utils": "^2.1.0",
    "fs-extra": "^8.1.0",
    "marked": "^0.7.0",
    "mrm-core": "^3.3.4",
    "open": "^7.0.0"
  },
  "peerDependencies": {
    "@adonisjs/application": "1.x.x"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/sink.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/sink/issues"
  },
  "homepage": "https://github.com/adonisjs/sink#readme",
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "contents": "build",
    "anyBranch": false
  }
}
